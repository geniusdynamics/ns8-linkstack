[Unit]
Description=Podman  linkstack-app.service
BindsTo=linkstack.service
After=linkstack.service mariadb-app.service

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
EnvironmentFile=-%S/state/smarthost.env
WorkingDirectory=%S/state
Restart=always
TimeoutStopSec=70
ExecStartPre=/bin/mkdir -p tmp
ExecStartPre=/bin/rm -f %t/linkstack-app.pid %t/linkstack-app.ctr-id
ExecStartPre=-runagent discover-smarthost
ExecStart=/usr/bin/podman run --conmon-pidfile %t/linkstack-app.pid \
    --cidfile %t/linkstack-app.ctr-id --cgroups=no-conmon \
    --pod-id-file %t/linkstack.pod-id --replace -d --name  linkstack-app \
    --volume linkstack-app:/var/www/html/:Z \
    --volume ./tmp:/tmp:Z \
    --env-file=%S/state/database.env \
    ${LINKSTACK_IMAGE}
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/linkstack-app.ctr-id -t 10
ExecReload=/usr/bin/podman kill -s HUP linkstack-app
SyslogIdentifier=%u
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/linkstack-app.ctr-id
PIDFile=%t/linkstack-app.pid
Type=forking

[Install]
WantedBy=default.target
